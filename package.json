{
    "name": "bookmark-renderer",
    "version": "0.1.4",
    "description": "A welcome popup, markdown reader, taskbar, and bookmark container.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-packager . --out=dist/win --platform=win32 --arch=x64 --icon=view/img/favicon.ico --overwrite",
        "build2": "@powershell -File Powershell/build-package-app.ps1 Set-ExecutionPolicy RemoteSigned -Scope CurrentUser"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mezcel/bookmark-renderer.git"
    },
    "keywords": [
        "welcome kiosk",
        "shortcuts",
        "script launcher",
        "markdown reader"
    ],
    "author": "Mezcel",
    "devDependencies": {},
    "dependencies": {
        "electron": "^6.1.11",
        "electron-packager": "^14.2.1",
        "marked": "^1.1.0"
    },
    "private": true
}
